TRY.
      " Try to convert p_pspnr to a number
      DATA(lv_numeric_pspnr) TYPE i.
      lv_numeric_pspnr = p_pspnr.
    CATCH cx_sy_conversion_no_number.
      MESSAGE 'Please enter a valid numeric Project Number' TYPE 'E'.
  ENDTRY.

  TRY.
      " Try to convert p_plan_value to a number
      DATA(lv_numeric_plan_value) TYPE i.
      lv_numeric_plan_value = p_plan_value.
    CATCH cx_sy_conversion_no_number.
      MESSAGE 'Please enter a valid numeric Plan Value' TYPE 'E'.
  ENDTRY.

